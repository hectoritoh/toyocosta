{% extends 'CelmediaToyocostaMotosBundle::layout.html.twig' %}

{% block seo %}
    
    <title>TOYOCOSTA | Toyota  {{moto.nombre}}</title>
    
    <meta name="description" content="Conoce las especificaciones y modelos disponibles de {{moto.nombre}}, disponible en Toyocosta."/>

    <meta name="keywords" content=" {{moto.nombre}} ecuador,  {{moto.nombre}} guayaquil,  {{moto.nombre}} toyocosta,  {{moto.nombre}} modelos,  {{moto.nombre}} cotizar,  {{moto.nombre}} galeria" />

{% endblock %}

	{% block contenido %}

		
		<div id="detalles" class="vehiculo-seccion-2">	
			{#<div class="espaciado-vehiculo visible-md visible-lg hidden-sm hidden-xs">
				&nbsp;
            </div>#}
            <div class="container-fluid espaciado-menu-3 ">
				&nbsp;as
			</div>

            <div class="container-fluid vehiculo-banner" style="background-image: url({{ asset('uploads/motos/banner/' ~   moto.imagenBanner ) }});height:300px;">
				&nbsp;
			</div>

			<div class="vehiculo-descripcion">
				<div class="container">
					<div class="row espacio-a">
						<div class="col-md-6">
							<div class="container-fluid">
								<div class="row">
									<div class="col-md-12" style="padding-left: 0px;">
										<ol class="breadcrumb breadcrumb-ty">
											<li>
												<a href="{{ path('toyocosta_homepage') }}" class="txt-rojo">Inicio</a>
											</li>
											<li><a href="{{ path('motos_home', { 'categorianombre': moto.categoria.nombre , 'categoriaid': moto.categoria.id } )  }}">MOTOS {{moto.categoria.nombre|upper}}</a></li>
											<li class="active">{{moto.nombre|upper}}</li>
										</ol>
									</div>
								</div>
								<div class="row">
									<div class="col-md-12 texto-detalle">
										<div class="row">
											<div class="col-md-4">
												<div class="row">

													<img src="{{ asset('uploads/motos/thumb/' ~ moto.categoria.imagenThumb ) }}" alt="" class="img-responsive obj-centrar" />

												</div>
											</div>
										</div>
										<h2>{{moto.nombre|upper}}</h2>
										<h4 class="">Precio</h4>
										<h2 class="txt-precio">${{moto.precio}}</h2>
										<span class="espacio-a">{{moto.informacion}}</span>
										
									</div>
								</div>
								<div class="row">
									
									<div class="col-md-5 espacio-a">
										<a href="{{path('landing_motos')}}" class="btn btn-vehiculo-rojo">Cotizar</a>
									</div>

									{% if moto.ficha %}

										<div class="col-md-7 espacio-a">
											<a href="{{ asset('uploads/motos/ficha/'   ~   moto.ficha ) }}" class="btn btn-vehiculo" target="_blank">
												Descargar ficha t√©cnica <i class="icono-descarga"></i> 
											</a>
										</div>


									{% endif %}


								</div>
							</div>
						</div>
						
						<div class="col-md-6">
							<div id="vehiculo-colores-carousel" class="carousel slide alto-completo" data-ride="carousel" data-interval="false">

							    <div class="container-fluid">
							    	<div class="row">
										<div class="carousel-inner carousel-inner-vh alto-completo">
											
											{% for motoColor in moto.colores %}
										    <div class="item {% if loop.first %}active{% endif %} alto-completo">
												
													<div class="container-fluid">
														<div class="row  espacio-a">
										    				<img src="{{ asset('uploads/motos/color/'   ~   motoColor.imagenColor ) }}" class="img-responsive obj-centrar" />
														</div>
														{#<div class="row">
															<div class="col-md-12 text-center espacio-a">
																<span class="txt-negro">COLOR: {{ motoColor.coloresmotos.nombre }}</span>
															</div>
														</div>#}
													</div>
												
										    </div>
											{% endfor %}

										</div>							    		
							    	</div>
							    	<div class="row">
									    <ol class="carousel-indicators carousel-indicators-vh">

								    
									    	{#{% for motoColor in moto.colores %}
									    		<li data-target="#vehiculo-colores-carousel" data-slide-to="{{loop.index -1 }}"  class="vehic-miniaturas {% if loop.first %}active{% endif %}" style="background-color: {{motoColor.coloresmotos.valor}} ;"></li>
									    	{% endfor %}#}


									    </ol>
							    	</div>
							    </div>

							</div>

						</div>
					</div>
				</div>
			</div>
		</div>  <!-- vehiculo-detalles -->


	{% endblock %}