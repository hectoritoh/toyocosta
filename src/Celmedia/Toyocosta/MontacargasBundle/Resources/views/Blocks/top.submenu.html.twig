                <a href="{{path('montacargas_sas')}}">SAS</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

  </div>
</div>

 <div id="sample1"  class="sub-menu-montacargas-productos">
    


  <ul id="sample-menu-1" class="sf-menu">
  {% set i = 1 %}
  {% for categoria in categoriasMontacargas %}
      
    <li id="sub-menu-productos-{{i}}">
      <a class="img_producto" >

        <img src="{{ asset('uploads/montacargas/categoria/' ~ categoria.fotoThumb ) }}" alt="" class="img-responsive imagen-submenu"/>

      </a>
      {{ render(controller("CelmediaToyocostaMontacargasBundle:Default:obtenerSubcategoriaXCategoria" , { 'categoriaId': categoria.id } ) ) }}

    </li>
    {% set i = i + 1 %}
  {% endfor %}

  </ul>


</div>


