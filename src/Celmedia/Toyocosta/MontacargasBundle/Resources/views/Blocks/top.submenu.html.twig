  <div class="submenu">
    
      <nav class="navbar navbar-default nav-pirelli nav-montacargas" role="navigation">
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('montacargas_home') }}" style="padding-top:1px;">
              {% image '@CelmediaToyocostaVehiculosBundle/Resources/public/images/montacargas/logos/toyotaindustrial.png' %}
                <img src="{{ asset_url }}"  />
              {% endimage %}
            </a>
          </div>

