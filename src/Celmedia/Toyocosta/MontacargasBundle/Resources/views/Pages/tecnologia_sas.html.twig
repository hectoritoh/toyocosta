					<h5 style="text-align:center"><span class="boton-gris">SIN SAS</span></h5>

					{% image '@CelmediaToyocostaMontacargasBundle/Resources/public/images/img-sas/m-5.png' %}
						<img src="{{ asset_url }}" class="img-responsive" />
		        	{% endimage %}

		        	
				</div>
				<div class="col-md-5">
					<h5 style="text-align:center"><span class="boton-naranja">CON SAS</span></h5>

					{% image '@CelmediaToyocostaMontacargasBundle/Resources/public/images/img-sas/m-6.png' %}
