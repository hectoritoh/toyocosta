{% extends 'CelmediaToyocostaMontacargasBundle::layout.html.twig' %}


{% block contenido %}

    {% include 'CelmediaToyocostaMontacargasBundle:Blocks:top.submenu.html.twig' %}
	<div class="banner-montacargas">
        <h1 class="titulo-interno">USADOS</h1>   
    </div>
	
	<div class="container">			
		{% include 'CelmediaToyocostaMontacargasBundle:Blocks:filtros.html.twig' %}

		<div class="row">
			<div class="col-md-12">
                <ol class="breadcrumb fondo-blanco">
                  <li><a href="{{ path('montacargas_home')}}">HOME</a></li>
                  <li class="active"><strong> USADOS</strong></li>
                </ol>
			</div>			
		</div>
		



        {% set i = 0 %}
        {% for row  in usados | batch(4) %}
        <div class="row bloque-usados">

            {% for item in row %}
                
    			<div class="col-md-3 col-sm-4 col-xs-6">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12 fondo-ficha sin-padding">

                                <a id="usado{{ i }}" data-toggle="modal" href="#Modal_usado{{ i }}">
                                    <div class="row img-ficha-sm">
                                  
                                        {% for thumb in item.imagenes %}

                                            {% if loop.first %}

                                            {% media thumb.media , 'large' with {'class': 'img-responsive'} %}
                                            {% endif %}

                                        {% endfor %}

                                    </div>
                                </a>
                                <div class="row relleno">
                                    <div class="col-md-12">
                                        <h2 class="text-modelo">
                                            {{ item.modelo }}
                                        </h2>
                                    </div>
                                </div>
                                <div class="divisor"></div>
                                <div class="row relleno">
                                    <div class="col-md-6">
                                        <p class="txt-smprecio">${{ item.precio }}</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <a href="#Modal_usado{{ i }}" data-toggle="modal" class="btn btn-iniciar">M&aacute;s informaci&oacute;n</a>
                                    </div>
                                </div>
                            </div>



                            <!-- Modal -->
                            <div class="modal fade"  class="modal fade "  id="Modal_usado{{ i }}" tabindex="-1" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content modal-content-seminuevo">
                                        <div class="modal-header header-ficha">
                                            <button type="button" class="close close-ficha" data-dismiss="modal" aria-hidden="true"></button>
                                        </div>
                                        <div class="modal-body fondo-ficha">
                                            <div class="contenedor-foto">
                                                <div id="carousel-usado{{ i }}" class="carousel slide" data-ride="carousel">
                                                    <div class="carousel-inner">
                                                        
                                                        {% for thumb in item.imagenes %}
                                                        <div class="item {% if loop.first %}active{% endif %}">
                                                            
                                                            {% media thumb.media , 'large' with {'class': 'img-responsive'} %}

                                                        </div>
                                                        
                                                        {% endfor %}
                                                    </div>

                                                    <!-- Controls -->

                                                    {% if item.imagenes|length > 1 %}
                                                    <a class="left carousel-control" href="#carousel-usado{{ i }}" role="button" data-slide="prev">
                                                        <span class="glyphicon glyphicon-chevron-left"></span>
                                                    </a>
                                                    <a class="right carousel-control" href="#carousel-usado{{ i }}" role="button" data-slide="next">
                                                        <span class="glyphicon glyphicon-chevron-right"></span>
                                                    </a>
                                                    {% endif %} 
                                                </div>

                                                <div class="ty-caption-montacarga">
                                                    
                                                    <span class="ty-nombre">{{ item.modelo }}</span>
                                                    
                                                </div>
                                            </div>
                                            <div class="container-fluid">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <fieldset class="ty-fieldset-border">
                                                            <legend class="ty-legend-border">Característica:</legend>
                                                            <div class="row">
                                                                <div class="col-md-6 col-sm-6 col-xs-6">
                                                                    <span class="modal-sm-txt">Precio:</span>
                                                                </div>
                                                                <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                                                                    <span class="modal-sm-txt-valor">${{  item.precio }}</span>
                                                                </div>
                                                            </div>
                                                            <div class="modal-divisor"></div>
                                                            <div class="row">
                                                                <div class="col-md-6 col-sm-6 col-xs-6">
                                                                    <span class="modal-sm-txt">Año:</span>
                                                                </div>
                                                                <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                                                                    <span class="modal-sm-txt-valor">{{  item.anio }}</span>
                                                                </div>
                                                            </div>
                                                            <div class="modal-divisor"></div>
                                                        </fieldset>
                                                        {% if item.descripcion %}
                                                            <fieldset class="ty-fieldset-border">
                                                                <legend class="ty-legend-border">Descripción:</legend>
                                                                <div class="row">
                                                                    <div class="col-md-12 text-left">
                                                                        <span class="modal-sm-txt-valor">{{  item.descripcion | raw }}</span>
                                                                    </div>
                                                                </div>
                                                            </fieldset>

                                                        {% endif %}
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 espacio-a">
                                                        <a href="{{ path('usados_cotizacion', {'idusado' : item.id })}}" class="btn btn-lg btn-rojo">Solicitar cotización</a>
                                                    </div>
                                                </div>
                                                
                                            </div><!-- Container fluid -->
                                            
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- modal_seminuevo -->

                        </div>
                     </div> 
                </div> 

            {% set i = i + 1 %}     

            {% endfor %}
			
			{#<div class="col-md-3 col-sm-4 col-xs-6">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 fondo-ficha sin-padding">
                            <a id="seminuevo" data-toggle="modal" href="#">
                                <div class="row img-ficha-sm">
                                    {% image '@CelmediaToyocostaMontacargasBundle/Resources/public/images/accesos/usado.jpg' %}
										<img src="{{ asset_url }}" class="img-responsive" />
					        		{% endimage %}
                                </div>
                            </a>
                            <div class="row relleno">
                                <div class="col-md-12">
                                    <h2 class="text-modelo">
                                        Montacargas BT
                                    </h2>
                                </div>
                            </div>
                            <div class="divisor"></div>
                            <div class="row relleno">
                                <div class="col-md-6">
                                    <p class="txt-smprecio">$125,45</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <a href="#" data-toggle="modal" class="btn btn-iniciar">M&aacute;s informaci&oacute;n</a>
                                </div>
                            </div>
                        </div>
                    </div>
                 </div> 
            </div>#}
		</div>

        {% endfor %}



        {% if usados|length > 8 %} 
            
            <div class="row" style="margin-bottom:20px;">
                <div class="container">

                    <div class="col-md-4 col-md-offset-4 btn btn-ver" onclick="mostrarUsados();">
                        Ver m&aacute;s
                    </div>
                </div>
            </div>

        {% else %}
            

            <div class="row" style="margin-bottom:20px;">
                <div class="container">

                </div>
            </div>

        {% endif %} 

	</div>										
	

{% endblock %}