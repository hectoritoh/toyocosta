{% extends 'CelmediaToyocostaMontacargasBundle::layout.html.twig' %}

{% block seo %}
    
    <title>TOYOCOSTA | Montacargas | Contacto</title>
    
    <meta name="description" content="Contáctate con Toyocosta y recibe más información de todos nuestros montacargas."/>

    <meta name="keywords" content="concesionario toyota guayaquil, toyocosta telefonos, toyocosta direccion, toyocosta montacargas" />

{% endblock %}

{% block contenido %}

    {{ render(controller("CelmediaToyocostaMontacargasBundle:Default:obtenerMenuPrincipal" ))   }}
    
    <div class="banner-montacargas">
        <h1 class="titulo-interno">CONTACTO</h1>
    </div>

    <div class="container">  
        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb fondo-blanco">
                  <li><a href="{{ path('toyocosta_homepage')}}">INICIO</a></li>
                  <li><a href="{{ path('montacargas_home')}}">MONTACARGAS</a></li>
                  <li><strong style="text-transform:uppercase;">CONTACTO</strong></li>
                </ol>
            </div>          
        </div>       
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h3 style="text-align:center">CONTACTO</h3>

                <form action="" {{ form_enctype(form) }} method="POST" role="form" id="form-register" class="form-horizontal">

                    {#{% if app.request.get('_route') == "montacargas_cotizacion" %}
                   
                    {% else %}
                   

                        {{ form_widget(form.usado, {'attr': {'class': 'form-control'}, 'value': usado.id }) }}

                    {% endif %}#}


                    {% if error %}
                        <div class="row space-input">
                            <div class="col-md-10">
                                <div class="row">
                                    <div class="col-xs-6" style="color: #e66; ">{{ error }}</div>
                               </div>  
                            </div>
                        </div>
                    {% endif %}

                    {{ form_widget(form._token) }}
                    <div class="row space-input">
                        <div class="col-md-6">
                           
                            {{ form_label(form.nombre, 'Nombre:', {'label_attr': {'class': 'col-sm-4'}}) }}
                           
                            {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                                  

                        </div>

                        <div class="col-md-6">

                            {{ form_label(form.apellido, 'Apellido:', {'label_attr': {'class': 'col-sm-4'}}) }}

                            {{ form_widget(form.apellido, {'attr': {'class': 'form-control'}}) }}
                
                        </div>
                    </div>
                    <div class="row space-input">
                        <div class="col-md-6">
        
                            {{ form_label(form.email, 'E-mail:', {'label_attr': {'class': 'col-sm-4'}}) }}

                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="col-md-6">

                            {{ form_label(form.telefono, 'Teléfono:', {'label_attr': {'class': 'col-sm-4'}}) }}
                           
                            {{ form_widget(form.telefono, {'attr': {'class': 'form-control'}}) }}
                          
                
                        </div>
                    </div>

                     <div class="row space-input">
                        <div class="col-md-6">
                            {{ form_label(form.ciudad, 'Ciudad:', {'label_attr': {'class': 'col-sm-4'}}) }}

                            {{ form_widget(form.ciudad, {'attr': {'class': 'form-control'}}) }}                           
        

                        </div>

                        <div class="col-md-6">


                            {{ form_label(form.mensaje, 'Mensaje:', {'label_attr': {'class': 'col-sm-4'}}) }}

                            {{ form_widget(form.mensaje, {'attr': {'class': 'form-control'}}) }}

                
                        </div>
                    </div>


                    <div class="row space-input">
                        <div class="col-md-12">

                        </div>

                    </div>


                    <div class="row space-input">
                        <div class="col-md-12">
                            {{ form_label(form.captcha, 'Complete el campo:', {'label_attr': {'class': 'col-sm-4'}}) }}
                            
                            {{ form_widget(form.captcha, {'attr': {'class': 'form-control'}}) }}

                        </div>
                        
                    </div>

                    

                    <div class="row space-input">
                        <div style="padding-top:20px;" class="col-md-10 col-md-offset-1">
                            <div class="row">
                                <div class="col-md-5 col-md-offset-1">
                                </div>
                                <div class="col-md-5">
                                    <input type="submit" style="width:100%;" class="btn btn-info" value="ENVIAR">
                                </div>
                            </div>  
                        </div>

                    </div>

                    
                </form>
                <br/><br/><br/>
            </div>
        </div>

    </div>



{% endblock %}

