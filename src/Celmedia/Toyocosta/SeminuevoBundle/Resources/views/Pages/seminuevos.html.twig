	                                        <p class="text-tipo">
												{% if seminuevo.estado == 1 %}
													{# 1 => 'Disponible' #}
													<i class="ico-disponible"></i>Disponible
												{% elseif seminuevo.estado == 2 %}
													{# 2 => 'Proximammente' #}
													<i class="ico-proximamente"></i>Próximamente
												{% elseif seminuevo.estado == 3 %}
													{# 3 => 'Reservado' #}
													<i class="ico-reservado"></i>Reservado
												{% elseif seminuevo.estado == 4 %}
													{# 4 => 'Vendido' #}
													<i class="ico-vendido"></i>Vendido
												{% endif %}
	                                        </p>
	                                    </div>
	                                    <div class="col-md-4">
	                                        <p class="text-precio">${{  seminuevo.precio}}</p>
	                                    </div>
	                                </div>
									<div class="divisor"></div>
									<a href="#" class="btn btn-iniciar">Cotizar</a>

