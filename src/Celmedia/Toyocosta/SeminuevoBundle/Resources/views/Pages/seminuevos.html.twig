{% extends 'CelmediaToyocostaSeminuevoBundle::layout.html.twig' %}

	{% block contenidoseminuevos %}

		{% include 'CelmediaToyocostaVehiculosBundle:Blocks:top.menu.secciones.html.twig' %}

		<div class="container-fluid espaciado-menu visible-md visible-lg hidden-sm hidden-xs">
			&nbsp;as
		</div>
		{% image '@CelmediaToyocostaSeminuevoBundle/Resources/public/images/banner-seminuevo.jpg' %}
		<div class="container-fluid seminuevo-banner" style="background-image: url({{ asset_url }});">
			<div class="v-center-contenedor">
				<div class="v-bottom-contenido">
					<div class="container-fluid">
						<div class="row text-center">
							<div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
								<h4 class="txt-blanco">¿Quieres comprar o vender tu auto?</h4>
								<a href="#" class="btn btn-lg btn-registrate">Regístrate</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
        {% endimage %}

        
    	<form id="form-iniciarsesion" class="fondoGrisClaro" role="form">
    		<div class="container">
				<div class="row">
					<div class="col-md-6">
						<p class="txt-iniciar-sesion">
							<span class="txt-negrita">¿Ya tienes una cuenta en seminuevos?</span> Inicia sesión ahora mismo.
						</p>
					</div>
					<div class="col-md-2">
						<input type="text" placeholder="Usuario" class="form-control input-sesion">
					</div>
					<div class="col-md-2">
						<input type="password" placeholder="Password" class="form-control input-sesion">
						
					</div>
					<div class="col-md-2">
						<input type="submit" class="btn btn-iniciar" value="Iniciar sesión" />
					</div>
				</div>    			
    		</div>
    	</form>



		<div class="buscador-seminuevo container-fluid">
	        <div class="row">
	            <form class="col-md-10 col-md-offset-1" name="buscador" action="{{ path('seminuevos_buscador') }}" method="post" >
	                {% if seminuevo_modelo is not defined or seminuevo_modelo is null %}
	                    {% set seminuevo_modelo = "0" %}
	                {% endif %}
	                {% if seminuevo_anio is not defined or seminuevo_anio is null %}
	                    {% set seminuevo_anio = "0" %}
	                {% endif %}
	                {% if seminuevo_precio is not defined or seminuevo_precio is null %}
	                    {% set seminuevo_precio = "0" %}
	                {% endif %}
	                {% if seminuevo_provincia is not defined or seminuevo_provincia is null %}
	                    {% set seminuevo_provincia = "0" %}
	                {% endif %}
	                {% if seminuevo_estado is not defined or seminuevo_estado is null %}
	                    {% set seminuevo_estado = "0" %}
	                {% endif %}

	                {{ render(controller("CelmediaToyocostaSeminuevoBundle:Default:getFiltros" , { 'seminuevo_modelo': seminuevo_modelo, 'seminuevo_anio': seminuevo_anio, 'seminuevo_precio': seminuevo_precio, 'seminuevo_provincia': seminuevo_provincia, 'seminuevo_estado': seminuevo_estado } ) ) }}
	            </form>
			</div>
		</div>

		<div class="container-fluid">
			<div class="row">
				


				<div id="vehiculo-carousel" class="carousel slide alto-completo" data-ride="carousel" data-interval="false">
					<ol class="carousel-indicators">
						<li data-target="#vehiculo-carousel" data-slide-to="0"  class="active"></li>
						<li data-target="#vehiculo-carousel" data-slide-to="1"  class=""></li>
					</ol>


					<div class="carousel-inner alto-completo">
						<div class="item active alto-completo">
							lala
						</div><!-- item -->
						<div class="item alto-completo">
							lalala
							
						</div><!-- item -->
					</div>


					<!-- Controls -->
					<a class="left carousel-control galeria-v-control" href="#vehiculo-carousel" data-slide="prev">
						<div class="slider-galeria left"></div>
					</a>
					<a class="right carousel-control galeria-v-control" href="#vehiculo-carousel" data-slide="next">
						<div class="slider-galeria right"></div>
					</a>

				</div>



			</div>
		</div>



		{#
			id
			color_id
			modelo
			marca
			tipo
			kilometraje
			precio
			anio
			ubicacion
			placa
			informacion
			descripcion_corta
			estado
			estado_publicacion
			created
			updated
			user_id
		#}

	<div class="container-fluid">
		{% set i = 0 %}
	    {% for row  in seminuevos | batch(4) %}
	        <div class="row" style="{% if loop.index > 2 %} display:none; {% endif %} ">
	            <div class="col-md-10 col-md-offset-1">
	                <div class="row">
	                    {% for seminuevo in row %}
	                    <div class="col-md-3">
	                        <div class="row">
	                            <div class="col-md-10 fondo-ficha contenedor-centrar">
	                                <a id="seminuevo{{ i }}" data-toggle="modal" href="#modal_seminuevo{{ i }}">
		                                <div class="row img-ficha">
		                                    <img src="{{ asset('uploads/seminuevos/'   ~   seminuevo.galeria[ random( (seminuevo.galeria|length - 1) ) ].imagen ) }}" alt="{{ seminuevo.modelo }}" class="img-responsive"/>
		                                </div>
	                                </a>
	                                
	                                <div class="row relleno">
	                                    <div class="col-md-12">
	                                        <h2 class="text-modelo">
	                                        	{{  seminuevo.modelo }}
	                                        </h2>
	                                    </div>
	                                </div>
	                                <div class="divisor"></div>
	                                <div class="row relleno">
