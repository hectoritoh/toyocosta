{% extends 'CelmediaToyocostaVehiculosBundle::template.html.twig' %}

{% block seo %}
            
    <title>TOYOCOSTA | Seminuevos</title>
    
    <meta name="description" content="¿Necesitas vender tu auto? En Toyocosta te ofrecemos una amplia variedad de autos seminuevos con la mejor garantía."/>

    <meta name="keywords" content="autos seminuevos Toyota guayaquil, carros seminuevos toyota guayaquil, autos seminuevos toyocosta." />

{% endblock %}


{% block bannercabecera %}

        <header>
            
            <img src="{{ asset('uploads/custom/seminuevos.jpg' ) }}" alt="" class="img-responsive" style="width:100%;" />

        </header>
    
{% endblock %}


{% block contenidotoyocosta %}

        
    <div class="container ty-breadcrumb">
        <div class="row">
            <ol class="breadcrumb">
                <li><a href="{{ path('toyocosta_homepage') }}">Inicio</a></li>
                <li><a href="{{ path('usados') }}">Seminuevos</a></li>
                <li class="active">{{seminuevo.marca}}</li>
                
            </ol>
        </div>
    </div>



    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="title-vehiculo">CARACTER&Iacute;STICAS</h1> 
            </div>
        </div>

        <div class="row" style="padding-top:20px;">
            <div class="col-md-6">
                {% if seminuevo.estado == 1 %}
                {#Destacado#}
                    {% image '@CelmediaToyocostaVehiculosBundle/Resources/public/custom/img/icon/tags.png' %}
                    <img src="{{ asset_url }}" alt="" class="img-responsive destacado" />
                    {% endimage %}
                {% endif %}
                <img src="{{ asset('uploads/seminuevos/'   ~   seminuevo.galeria[0].imagen ) }}" alt="{{ seminuevo.modelo }}" class="img-responsive obj-centrar" style="border: 1px solid #ccc;" />

            </div>
            <div class="col-md-5">
                <h1 class="txt-marca">{{seminuevo.marca}}</h1>
                <p class="txt-modelo">{{seminuevo.modelo}}</p>
                <h1 class="semi-precio">$ {{seminuevo.precio}}</h1>

                    {% if seminuevo.estado == 2 %}
                        <span class="circle-disp"></span>
                        <p class="txt-disponibilidad">
                            
                            Disponible
                        </p>
                    {% elseif seminuevo.estado == 1 %}
                        <span class="circle-disp"></span>
                        <p class="txt-disponibilidad">
                        
                            Disponible
                        </p>
                    {% elseif seminuevo.estado == 3 %}
                        <span class="circle-prox"></span>
                        <p class="txt-prox">
                            
                            Próximamente
                        </p>
                    {% elseif seminuevo.estado == 4 %}
                        
                        Reservado
                    {% elseif seminuevo.estado == 5 %}
                        
                        Vendido
                    {% endif %}

                
                <div class="semi-title">
                    <div class="ico-calendar"></div>{{ seminuevo.anio }}
                </div>
                <div class="semi-title">
                    <div class="ico-kms"></div>{{ seminuevo.kilometraje }} kms.
                </div>
                <div class="semi-title">
                    <div class="ico-color"></div>{{ seminuevo.coloresseminuevo.nombre }}
                </div>

                <div class="divisor"></div>

                <h5>Certificados</h5>

                {% for row in seminuevo.certificados | batch(6) %}
                    <div class="row">
                        {% for certificado in row %}
                            <div class="col-md-3">
                                <a data-toggle="tooltip" data-placement="top" title="{{ certificado.nombre }}" alt="{{ certificado.nombre }}" target="_blank" href="{{ path('custom_certificados') }}">
                                    
                                    <img src="{{ asset('uploads/seminuevos/certificados/'   ~   certificado.imagen ) }}" alt="{{ certificado.nombre }}" class="img-responsive obj-centrar"/>
                                </a>
                                
                            </div>                          
                        {% endfor %}
                    </div>                                                                    
                {% endfor %}

                <p style="margin-top:5px;"><a target="_blank" href="{{ path('custom_certificados') }}" class="semi-certificado">Ver Certificados</a></p>
            </div>
        </div> 

        <div class="row tb-20">
            <div class="col-md-2">
                <a href="#cotizar" class="page-scroll btn btn-siguiente">
                    Cotizar
                </a>
            </div>
        </div> 

        <div class="row">
            <div class="col-md-6">
                <p style="letter-spacing:0px;">{{seminuevo.informacion}}</p>
            </div>
        </div> 

        <div class="row">
            <div class="col-md-10">
                <p>Equipamiento</p>
                <div class="tag">Airbag</div>
                <div class="tag">Alarma</div>
                <div class="tag">Aros</div>
                <div class="tag">Bloque Central</div>
                <div class="tag">Freno ABS</div>
                <div class="tag">Radio CD</div>
                <div class="tag">Velocidad Crucero</div>
            </div>
        </div>

        <div class="separador"></div>

        <div class="row">
            <div class="col-md-12">
                <h1 class="title-vehiculo">GALER&Iacute;A</h1> 
            </div>
        </div>

        {#<div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            {% set y = 0 %}
                            {% for seminuevoimagen in seminuevo.galeria %}
                            
                            <div class="col-md-3 sinpd">
                            
                                <img src="{{ asset('uploads/seminuevos/'   ~   seminuevo.galeria[ y ].imagen ) }}" alt="{{ seminuevo.modelo }}" class="img-responsive obj-centrar"/>
                            
                            </div>
                            {% set y = y + 1 %}
                            {% endfor %}

                            
                        </div>
                    </div>

                </div>
            </div>
        </div>#}

        <div class="row">
            <div class="col-md-12">   
                <div id="gallery">

                    <div class="ftg-items">
                        <div class="ftg-items">

                            {% set y = 0 %}
                            {% for galeria in seminuevo.galeria %}
                                
                                <article class="tile ftg-cat-1">
                                    <a class="tile-inner example-image-link" data-lightbox="cat-1" href="{{ asset('uploads/seminuevos/'   ~   seminuevo.galeria[ y ].imagen ) }}" rel="galeria">
                                        
                                        
                                        <img src="{{ asset('uploads/seminuevos/'   ~   seminuevo.galeria[ y ].imagen ) }}" alt="{{ seminuevo.modelo }}" class="item"/>

                                    </a>
                                </article>

                                {% set y = y + 1 %}
                            {% endfor %}


                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="separador"></div>

        <div class="row">
            <div class="col-md-12">
                <h1 class="title-vehiculo">COTIZAR</h1> 
            </div>
        </div>

        <div id="cotizar" class="row" style="padding-bottom:50px;">
            <div class="row">
                <div class="col-md-12">
                    <p class="text-center" style="font-size:17px;margin-top:20px;margin-bottom:20px;">Llegamos a la parte de financiamiento ¿Cu&aacute;nto dar&iacute;as de entrada?</p>
                </div>
            </div>

            <div class="col-md-12" style="border: 1px solid #ccc;">
                <form id="cotizarFormSN" method="get" action="" class="form-horizontal">
                    <div id="rootwizard2">
                        <div class="cotizar-banner" style="display:none;">
                            <div class="container">
                                <div class="row espacio-banner-cotizar">
                                    <ul class="nav-cotizar">
                                        <li class="active">
                                            <a href="#tab1" data-toggle="tab" class="pasos paso-1">Paso1</a>
                                        </li>
                                        <li>
                                            <a href="#tab2" data-toggle="tab" class="pasos paso-2">Paso2</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab1">
                                <div class="container-fluid" style="margin-top:50px;">              
                                    <div class="row">
                                        <div class="col-md-4 text-left bd-right">
                                            <h3 class="tab2-titular">Precio Total</h3>
                                            <p class="tab-txt">Precio final: <br/><span class="txt-rojo" id="vpreciosi">{{ seminuevo.precio }} USD</span></p>
                                            <p class="tab-txt">Entrada mínima: <br/><span class="txt-rojo" id="ventradam">{{ entradaMinima }} USD</span></p>


                                            <p class="cotizar-descripcion">
                                                <span class="txt-rojo">*</span>Los precios no incluyen seguro ni dispositivos. <br />
                                                La entrada mínima es de 30% del valor del vehículo. La calculadora de cuotas no incluye el seguro, ni dispositivos antirobos. Para obtener cuotas más exactas con estos datos, favor consultar directamente con el concesionario.   <br />
                                                El plazo, la tasa de interés, el seguro y los gastos administrativos varían según las instituciones financieras.
                                            </p>
                                        </div>
                                        

                                        <div class="col-md-4 text-left ">
                                            <h3 class="tab2-titular">Cotizar</h3>
                                            <p class="tab-txt txt-gris">Entrada:</p>
                                            <input type="number" class="form-control" name="vinputEntrada" id="vinputEntrada" placeholder="">

                                            <p class="tab-txt txt-gris">Plazo:</p>
                                            <select name="vselectplazo" id="vselectplazo" class="form-control selectplazo select-custom" onchange="plazoSelectedSM(this, {{ seminuevo.id }});">
                                                <option value="">Selecciona un plazo</option>
                                                {% for plazo  in seminuevoPlazo %}
                                                    <option value="{{ plazo.id }}">{{ plazo.valor }}</option>
                                                {% endfor %}
                                            </select>

                                            <input type="hidden" id="vseminuevo" name="vseminuevo" value="{{ seminuevo.id }}">
                                        </div>

                                        <div class="col-md-4 text-left bd-left">
                                            <h3 class="tab2-titular">Resultados</h3>

                                            <p class="tab-txt">Total a financiar:  <br/> <span class="txt-rojo" id="vpreciofinanciar" >0 USD</span></p>
                                            <p class="tab-txt">Cuotas Mensuales:  <br/> <span class="txt-rojo" id="vcuotas" >0 USD</span></p>
                                            <p class="tab-txt">Precio final con financiamiento:  <br/> <span class="txt-rojo txt-negrita" id="vpreciofinal" >0 USD</span></p>

                                 
                                            <p class="cotizar-descripcion" style="min-height: 157px;">
                                                <span class="txt-rojo">*</span>Esta información es únicamente referencial y no representa ningún compromiso con Toyocosta. Para recibir información exacta contactarse con cualquiera de los concesionario del país. 
                                                Esta información está sujeta a cambios sin previo aviso.
                                            </p>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="tab-pane" id="tab2">
                                <div class="container" style="margin-top:50px;">
                                    <div class="row">
                                        <div class="col-md-4 col-md-offset-1 alto-completo">
                                            <div class="form-group">
                                                <label for="vnombreInput">Nombre:</label>
                                                <input type="text" class="form-control" name="vnombreInput" id="vnombreInput" maxlength="50" placeholder="">
                                            </div>
                                            <div class="form-group">
                                                <label for="vapellidoInput">Apellido:</label>
                                                <input type="text" class="form-control" name="vapellidoInput" id="vapellidoInput" maxlength="50" placeholder="">
                                            </div>
                                            <div class="form-group">
                                                <label for="vcedulaInput">Cédula:</label>
                                                <input type="number" class="form-control" name="vcedulaInput" id="vcedulaInput" maxlength="10" placeholder="">
                                            </div>
                                            <div class="form-group">
                                                <label for="vtelefonoInput">Teléfono:</label>
                                                <input type="number" class="form-control" name="vtelefonoInput" id="vtelefonoInput" maxlength="15" placeholder="">
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-md-offset-2 alto-completo">
                                            <div class="form-group">
                                                <label for="vemailInput">Email:</label>
                                                <input type="email" class="form-control" name="vemailInput" id="vemailInput" maxlength="50" placeholder="">
                                            </div>
                                            <div class="form-group">
                                                <label for="vciudadInput">Ciudad:</label>
                                                <input type="text" class="form-control" name="vciudadInput" id="vciudadInput" maxlength="50" placeholder="">
                                            </div>
                                            <div class="form-group">
                                                <label for="vmensajeInput">Mensaje:</label>
                                                <textarea class="form-control" name="vmensajeInput" id="vmensajeInput" rows="5" maxlength="200"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>  
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-md-offset-3">
                                    <ul class="pager wizard">
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <li class="previous first" style="display:none;">
                                                        <a href="#cotizar" class="btn btn-anterior espaciado-a">First</a>
                                                    </li>
                                                    <li class="previous">
                                                        <a href="#cotizar" class="btn btn-anterior espaciado-a">Anterior</a>
                                                    </li>
                                                </div>
                                                <div class="col-md-6">
                                                    <li class="next">
                                                        <a href="#cotizar" class="btn btn-siguiente espaciado-a">Siguiente</a>
                                                    </li>
                                                    <li class="finish" style="display:none;">
                                                        <a href="javascript:;" class="btn btn-siguiente espaciado-a">Enviar</a>
                                                    </li>
                                                </div>
                                            </div>
                                        </div>
                                    </ul>                               
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>



{% endblock %}


