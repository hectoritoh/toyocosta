<div id="carousel-camionetas" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators carousel-camionetas">

    {% set i = 0 %}
    {% for bullet in slideCamionetas %}


      <li data-target="#carousel-camionetas" data-slide-to="{{ i }}" class="miniaturas {% if loop.first %} active {% endif %}">
          <br />
          <img src="{{ asset('uploads/vehiculo/SlideVehiculos/'   ~   bullet.imagenThumb ) }}" alt="Autos" class="img-indicator" />

          
          <div class="fondo-bullet">
            <p class="txt-indicador"><br />{{ bullet.vehiculoSlide.nombre}}</p>
            <!-- <p class="txt-indicador"><br />Hilux CS</p> -->
          </div>

          
      </li>
      {% set i = i + 1 %}
    {% endfor %}


  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">

    {% for item in slideCamionetas %}

    <div class="item {% if loop.first %} active {% endif %}">

      <img src="{{ asset('uploads/vehiculo/SlideVehiculos/'   ~   item.imagenSlide ) }}" alt="Autos" class="img-responsive" />
          
      
      <div class="carousel-caption position-caption">
          <div class="row distancia">
            <div class="cuadro-precio">
              <h4 class="txt-caption">Precio <span class="precio-caption">${{ item.vehiculoSlide.precio }}</span></h4>
              <p class="parrafo-caption">{{ item.vehiculoSlide.informacion}}</p>
            </div>

          </div>
          <div class="row">
            <div class="cuadro-caption">
              <div class="col-md-2">

                <ul class="list-caption">
                  <li class="link-caption"><a class="link" href="#">Solicita Cotizaci&oacute;n</a></li>
                  <li class="link-caption"><a class="link" href="#">Test Driver</a></li>
                  <li class="link-caption"><a class="link" href="#">Ver m&aacute;s</a></li>

                </ul>

              </div>
            </div>
          </div>


      </div>
    </div>


    {% endfor %}


  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-camionetas" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-camionetas" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
