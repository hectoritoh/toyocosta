<div class="container-fluid" style="position: relative;height: 100%;">
	<div id="carousel-principal-mobil" class="carousel slide row" data-ride="carousel" style="height:100%;">
		<!-- Indicators -->
		<ol class="carousel-indicators">
		    {#<li data-target="#carousel-principal-mobil" data-slide-to="0" class="active"></li>
		    <li data-target="#carousel-principal-mobil" data-slide-to="1"></li>
		    <li data-target="#carousel-principal-mobil" data-slide-to="2"></li>#}

		    {% set i = 0 %}
		    {% for bullet in slidePrincipal %}
		    <li data-target="#carousel-principal-mobil" data-slide-to="{{ i }}"  class="{% if loop.first %}active{% endif %}">
		    </li>
		    {% set i = i + 1 %}
		    {% endfor %}
		</ol>

		<!-- Wrapper for slides -->
		<div class="carousel-inner" style="position: relative;height: 100%;">

			{% for item in slidePrincipal %}

			<div class="item {% if loop.first %} active {% endif %} alto-completo item-carousel-home-ty" style="background-image: url({{ asset('uploads/slide-principal/mobil/'   ~   item.ImagenMovil ) }});background-size: 100% 100%;background-repeat: no-repeat; height:100%;">
				<div class="carousel-caption ty-principal-caption">
					<div class="container-fluid">
						<div class="row">
							{% if item.descripcion %}

							<h4 class="txt-blanco" style="font-size:14px,">{{ item.descripcion }}</h4>
							{% endif %}
							{% if item.link and item.boton %}
							<div class="col-md-4 col-md-offset-4">
								<a href="{{item.link}}" class="btn btn-ver-mas">
									{{ item.boton }}
								</a>
							</div>

							{% endif %}

						</div>
					</div>
				</div>

			</div>
			{% endfor %}

			


		</div>

		<!-- Controls -->
		<a class="left carousel-control" href="#carousel-principal-mobil" role="button" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left"></span>
		</a>
		<a class="right carousel-control" href="#carousel-principal-mobil" role="button" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right"></span>
		</a>

	</div>

</div>

