{% extends 'CelmediaToyocostaVehiculosBundle::layout.mobile.html.twig' %}


{% block contenidoMobil %}
	<div class="container-fluid" style="">
		<div class="row">
			{% image '@CelmediaToyocostaVehiculosBundle/Resources/public/images/movil/producto.jpg' %}
			<img src="{{ asset_url }}" alt="" class="img-responsive" style="" />
			{% endimage %}
		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12">
				<ol class="breadcrumb breadcrumb-mobil">
					<li>
						<a href="#" class="txt-gris">INICIO</a>
					</li>
					{% if vehiculoSeleccionado is not defined or vehiculoSeleccionado is null %}
						
					{% else %}

					<li><a href="#" class="txt-gris"> {{ vehiculoSeleccionado.nombre }}</a></li>

					{% endif %}

					<li class="active">COTIZAR</li>
				</ol>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<h1 class="txt-vehiculo">Cotizador</h1>				
			</div>

		</div>


		<div class="row">
			<div class="col-xs-12">
				
				<!-- Nav tabs -->
				<ul class="nav nav-tabs nav-cotizador" role="tablist">
				  <li class="active" style="border-right: 1px solid #d3d3d3;"><a href="#datos" role="tab" data-toggle="tab">TUS DATOS</a></li>
				  <li style="border-right: 1px solid #d3d3d3;"><a href="#resultados" role="tab" data-toggle="tab">PRECIO</a></li>
				  <li><a href="#confirmacion" role="tab" data-toggle="tab">CONFIRMACI&Oacute;N</a></li>
				  
				</ul>

				<!-- Tab panes -->
				<form role="form" id="form-cotizar">
					<div class="tab-content">
						<div class="tab-pane active" id="datos">
						  	<h3 class="txt-datos-personales">DATOS PERSONALES</h3>
						  		<div class="form-group">
						  			<label>Nombre:</label>
						  			<input type="text" class="form-control" id="nombre" name="nombre" />
						  		</div>
						  		<div class="form-group">
						  			<label>Apellido:</label>
						  			<input type="text" class="form-control" id="apellido" name="apellido" />
						  		</div>
								<div class="form-group">
								    <label for="exampleInputEmail1">Email:</label>
								    <input type="email" class="form-control" id="email" name="email"/>
								</div>						  	
						  		<div class="form-group">
						  			<label>Telefono:</label>
						  			<input type="text" class="form-control" id="telefono" name="telefono" />
						  		</div>
							  	<div class="form-group">
							    	<label>Veh&iacute;culo:</label>

							    	{% if vehiculoSeleccionado is not defined or vehiculoSeleccionado is null %}
										{% set vehiculoSeleccionado = {'id': "0"} %}
									{% endif %}

									<select id="vehiculo" name="vehiculo" class="form-control" >
										<option  class=""  value="-1" ></option>
										{%    for vehiculo in vehiculos   %}
										<option  class=""  value="{{ loop.index0  }}" {% if vehiculo.id == vehiculoSeleccionado.id %}selected{% endif %} >{{  vehiculo.nombre }}</option>
										{%    endfor %}   
									</select>

							  	</div>
							  
							  <!-- <button type="submit" class="btn btn-default">Submit</button> -->
								<a href="#resultados" role="tab" data-toggle="tab">
								  	<div class="col-xs-12 btn btn-rojo">
							    		Siguiente
							    	</div>
							    </a>
						</div>
					  	<div class="tab-pane" id="resultados">
					  		<h3 class="txt-datos-personales">PRECIO</h3>


					  		<div class="form-group">
						  			<label>Entrada:</label>
						  			<input type="text" class="form-control" id="entrada" name="entrada" />
					  		</div>
						  	<div class="form-group">
						    	<label>Plazo:</label>
					  			<select name="vehiculo" id="vehiculo" class="form-control">
					  				<option>12</option>
					  				<option>24</option>
					  				<option>36</option>
					  			</select>
						  	</div>
						  	<div class="form-group">
						    	<label>Descripci&oacute;n:</label>
					  			 <textarea id="mensaje" name="mensaje" class="form-control"></textarea>
						  	</div>

						  	<input type="submit" value="Enviar" class="btn btn-rojo" style="width:100%;">

					  	</div>
					  	<div class="tab-pane" id="confirmacion">
							<h3 class="txt-datos-personales">GRACIAS</h3>

							<p class="txt-result txt-gris">
								Su pedido de informacion se ha completado correctamente.<br />
								Un representante de Toyocosta se contactar&aacute; con usted 
								inmediatamente.
							</p>

							<a href="#datos" role="tab" data-toggle="tab">
							  	<div class="col-xs-12 btn btn-rojo">
						    		Regresar al inicio
						    	</div>
						    </a>				  		
					  	</div>
					</div>
				</form>



			</div>
	    </div>

	    <div class="row" style="height:20px;">
	    	&nbsp;
	    </div>
	</div>

{% endblock %}