{% extends 'CelmediaToyocostaVehiculosBundle::layout.mobile.html.twig' %}


{% block contenidoMobil %}
	<div class="container-fluid" style="">
		<div class="row">
			
			<img src="{{ asset('uploads/motos/thumb/'   ~   categoria.imagenThumb ) }}" alt="{{categoria.nombre}}" class="img-responsive" style="margin: 0 auto;" />


		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12">
				<ol class="breadcrumb breadcrumb-mobil">
					<li>
						<a href="#" class="txt-gris">INICIO</a>
					</li>
					<li class="active">{{categoria.nombre|upper}}</li>
				</ol>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				{#<h1 class="txt-vehiculo">Cita de Mantenimiento</h1>#}	

				<p class="txt-result">
					{{categoria.descripcion}}
				</p>			
			</div>

		</div>


		<div class="row">
			
				
	            {% for row in motos %}

				<div class="col-xs-12" style="margin-bottom:15px;">
					<div class="row">
						<div class="col-xs-10 col-xs-offset-1" >
							<div class="row" style="border: 1px solid #EEEEEE;">


								{% for item in row.colores %}
									
									{% if loop.first %}

									<img src="{{ asset('uploads/motos/color/'   ~   item.imagenColor ) }}" alt="{{ row.nombre }}" class="img-responsive"/>

									{% endif %}							    

								{% endfor %}



							</div>
							<div class="row" style="  background-color: #EEEEEE;">
								<h5 class="text-center">{{ row.nombre }}</h5>
								<a href="{{ path('m_moto', { 'categoria': categoria.nombre , 'nombre': row.nombre,  'id': row.id } )}}">
									
									<div class="col-xs-6 col-xs-offset-3 btn btn-rojo">
										VER M√ÅS
									</div>

								</a>
							</div>
						</div>
					</div>
				</div>

	            {% endfor %}


	    </div>

	    <div class="row" style="height:20px;">
	    	&nbsp;
	    </div>
	</div>

{% endblock %}