
{% extends 'CelmediaToyocostaVehiculosBundle::layout.html.twig' %}

{% block contenidotoyocosta %}

	{% include 'CelmediaToyocostaVehiculosBundle:Blocks:top.menu.secciones.html.twig' %}

	<div class="row banner-mantenimiento">
		<div class="container">

		</div>
	</div>
	<div class="container">

		<div class="row" style="padding-top: 20px;padding-bottom: 30px;">


			<div class="col-md-12 text-center">

				<div class="col-md-8 col-md-offset-2">
					<h3>Por favor llene el siguiente formulario para que un representante de Toyocosta pueda comunicarse inmediatamente con usted.</h3>
				</div>

			</div>

			<div class="col-md-12">

				<form id="form-mantenimiento" class="form-info">
					
					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1">

							<div class="row">
								<div class="col-xs-4 col-xs-offset-1">
									<label>Nombre:</label>
									<input id="nombre" name="nombre" type="text" class="form-control" placeholder="" />
								</div>
								<div class="col-xs-4 col-xs-offset-1">
									<label>Apellido:</label>
									<input id="apellido" name="apellido" type="text" class="form-control" placeholder="" />
								</div>

							</div>	
						</div>

					</div>

					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1">

							<div class="row">
								<div class="col-xs-4 col-xs-offset-1">
									<label>Tel&eacute;fono:</label>
									<input id="telefono" name="telefono" type="text" class="form-control" placeholder="" />
								</div>
								<div class="col-xs-4 col-xs-offset-1">
									<label>Email:</label>
									<input id="email" name="email" type="text" class="form-control" placeholder="" />
								</div>

							</div>	
						</div>

					</div>


					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1">

							<div class="row">
								<div class="col-xs-4 col-xs-offset-1">
									<label>Celular:</label>
									<input id="celular" name="celular" type="text" class="form-control" placeholder="" />
								</div>
								<div class="col-xs-4 col-xs-offset-1">
									<label>Fecha Tentativa</label>
									<input id="fecha" name="fecha" type="date" class="form-control" placeholder="" />
								</div>

							</div>	
						</div>

					</div>

					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1">

							<div class="row">
								<div class="col-xs-4 col-xs-offset-1">
									<label>Reserva de:</label>
									<select name="reserva" id="reserva" class="form-control txt-select" onchange="reservaSelected(this)">
										<option>Seleccion un tipo</option>
										
										{% for reserva in reservas %}
											<option value="{{ reserva.id }}" >{{ reserva.nombre }}</option>
				                    	{% endfor %}

									</select>
								</div>
								<div class="col-xs-4 col-xs-offset-1">
									<label>Observaciones:</label>
									<textarea class="form-control" rows="3"></textarea>
								</div>

							</div>	
						</div>

					</div>

					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1">

							<div class="row">
								<div class="col-xs-4 col-xs-offset-1">
									<label>Taller:</label>
									<select name="taller" id="taller" class="form-control txt-select">
										<option>Seleccion un taller</option>

									</select>
								</div>
								<div class="col-xs-4 col-xs-offset-1">
									
								</div>

							</div>	
						</div>

					</div>

					<div class="row space-input" id="sm-modelo-km" style="display:none;">
						<div class="col-md-10 col-md-offset-1">

							<div class="row">
								<div class="col-xs-4 col-xs-offset-1">
									<label>Modelo:</label>
									<select  name="modelo" id="modelo"  class="form-control txt-select">
										{% for row in vehiculos %}
											<option value="{{ row.nombre }}" >{{ row.nombre }}</option>
				                    	{% endfor %}
									</select>
								</div>
								<div class="col-xs-4 col-xs-offset-1">
									<label>Kilometros:</label>
									<select  name="kilometraje" id="kilometraje"  class="form-control txt-select">
										<option value="0">Seleccione un Kilometraje</option>									
										<option value="c1">1,000 kms</option>

										<option value="c5">5,000 kms</option>

										<option value="c10">10,000 kms</option>

										<option value="c15">15,000 kms</option>

										<option value="c20">20,000 kms</option>

										<option value="c25">25,000 kms</option>

										<option value="c30">30,000 kms</option>

										<option value="c35">35,000 kms</option>

										<option value="c40">40,000 kms</option>

										<option value="c45">45,000 kms</option>

										<option value="c50">50,000 kms</option>

										<option value="c55">55,000 kms</option>

										<option value="c60">60,000 kms</option>

										<option value="c65">65,000 kms</option>

										<option value="c70">70,000 kms</option>

										<option value="c75">75,000 kms</option>

										<option value="c80">80,000 kms</option>

										<option value="c85">85,000 kms</option>

										<option value="c90">90,000 kms</option>

										<option value="c95">95,000 kms</option>

										<option value="c100">100,000 kms</option>

									</select>
								</div>

							</div>	
						</div>

					</div>


					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1" style="padding-top:20px;">

							<div class="row">
								<div class="col-md-3 col-md-offset-4">

	                                <input type="submit" value="Enviar" class="btn btn-lg btn-info" style="width:100%;">
								</div>
							</div>	
						</div>

					</div>

				</form>

			</div>


		</div>

	</div>


{% endblock %}
