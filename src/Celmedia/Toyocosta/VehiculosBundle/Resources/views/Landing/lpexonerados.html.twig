
{% extends 'CelmediaToyocostaVehiculosBundle::layout.html.twig' %}

{% block contenidotoyocosta %}

		{% include 'CelmediaToyocostaVehiculosBundle:Blocks:top.menu.secciones.html.twig' %}

<div class="row banner-lp visible-md visible-lg visible-sm hidden-xs" style="top:40px;background-color:#FCFCFA;">
	{% image '@CelmediaToyocostaVehiculosBundle/Resources/public/images/exonerados/informacion/banner.jpg' %}
	    <img src="{{ asset_url }}" alt=""  style="margin:0 auto;" class="img-responsive" />
	{% endimage %}
</div>

<div class="row banner-lp hidden-md hidden-lg hidden-sm visible-xs">
	{% image '@CelmediaToyocostaVehiculosBundle/Resources/public/images/exonerados/informacion/banner.jpg' %}
	    <img src="{{ asset_url }}" alt=""  style="width:100%;" class="img-responsive" />
	{% endimage %}
</div>


<div class="container">

	<div class="row lp-contenido">


		<div class="col-md-12 text-center">
			<h1 class="txt-lp-1 txt-rojo">EXONERADOS DE IMPUESTOS.</h1>
			{#<h2 class="txt-lp-2">SOLICITAR COTIZACI&Oacute;N</h2>#}
			<p class="txt-lp-p txt-info">Por favor llene el siguiente formulario para que un representante de Toyocosta pueda comunicarse inmediatamente con usted.</p>

		</div>

		<div class="col-md-12">

			<form id="form-etiqueta" class="form-info">
				
				<input type="hidden" id="campana" name="campana" value="Exonerados de Impuestos, Web" />

				<div class="row space-input">
					<div class="col-md-10 col-md-offset-1 col-xs-12">

						<div class="row">
							<div class="col-sm-4 col-sm-offset-1 col-xs-12">
								<label>Nombre:</label>
								<input id="nombre" name="nombre" type="text" class="form-control" maxlength="100" placeholder="" />
							</div>
							<div class="col-sm-4 col-sm-offset-1 col-xs-12">
								<label>Apellido:</label>
								<input id="apellido" name="apellido" type="text" class="form-control" maxlength="100" placeholder="" />
							</div>

						</div>	
					</div>

				</div>

				<div class="row space-input">
					<div class="col-md-10 col-md-offset-1 col-xs-12">

						<div class="row">
							<div class="col-sm-4 col-sm-offset-1 col-xs-12">
								<label>Tel&eacute;fono:</label>
								<input id="telefono" name="telefono" type="text" class="form-control" maxlength="10" placeholder="" />
							</div>
							<div class="col-sm-4 col-sm-offset-1 col-xs-12">
								<label>Celular:</label>
								<input id="celular" name="celular" type="text" class="form-control" maxlength="10" placeholder="" />
							</div>

						</div>	
					</div>

				</div>

				<div class="row space-input">
					<div class="col-md-10 col-md-offset-1 col-xs-12">

						<div class="row">
							<div class="col-sm-4 col-sm-offset-1 col-xs-12">
								<label>Email:</label>
								<input id="email" name="email" type="text" class="form-control" placeholder="" />
							</div>
							<div class="col-sm-4 col-sm-offset-1 col-xs-12">
								<label>C&eacute;dula:</label>
								<input id="cedula" name="cedula" type="text" class="form-control" maxlength="10" placeholder="" />
							</div>

						</div>	
					</div>

				</div>

				<div class="row space-input">
					<div class="col-md-10 col-md-offset-1 col-xs-12">

						<div class="row">
							<div class="col-sm-4 col-sm-offset-1 col-xs-12">
								<label>Modelo:</label>
								<select name="modeloexonerados" id="modeloexonerados" class="form-control txt-select">
									<option value="">Selecciona un modelo</option>
									<option value="Corolla">Corolla</option>
									<option value="GT-86">GT-86</option>
									<option value="HILUX CD 4X2">HILUX CD 4X2</option>
									<option value="HILUX CD 4x4">HILUX CD 4x4</option>
									<option value="4RUNNER">4RUNNER</option>
									<option value="FJ CRUISER">FJ CRUISER</option>
									<option value="PRIUS C SPORT">PRIUS C SPORT</option>
									<option value="PRIUS HIBRIDO">PRIUS HIBRIDO</option>
									<option value="YARIS TAXI">YARIS TAXI</option>
									<option value="HILUX CHASIS 4X2">HILUX CHASIS 4X2</option>
									<option value="HILUX CS">HILUX CS</option>
									<option value="FORTUNER">FORTUNER</option>
									<option value="FORTUNER">FORTUNER</option>
									<option value="LAND CRUISER">LAND CRUISER</option>
									<option value="RAV4">RAV4</option>
								</select>
							</div>
							<div class="col-sm-4 col-sm-offset-1 col-xs-12">
								<label>Tipo de Exoneración:</label>
								<select name="tipoexonerados" id="tipoexonerados" class="form-control txt-select">
									<option value="">Selecciona un tipo de exoneración</option>
									<option value="Discapacitados">Discapacitados</option>
									<option value="Diplomatico">Diplomático y ONG’s</option>
									<option value="Plan Renova">Plan Renova</option>
									<option value="Compras Publicas">Compras Públicas</option>
								</select>
							</div>

						</div>	
					</div>

				</div>


				

				<div class="row space-input">
					<div class="col-md-10 col-md-offset-1 col-xs-12">

						<div class="row">
							<div class="col-sm-9 col-sm-offset-1 col-xs-12">
								<label>Comentarios:</label>
								<textarea id="comentario" name="comentario" class="form-control" rows="3"></textarea>

							</div>
						</div>	
					</div>

				</div>


				
				<div class="row space-input" style="padding-top:20px;">

					<div class="col-md-3 col-md-offset-2 col-sm-3 col-xs-12" style="padding-right:0px;">

                        <input type="submit" value="Enviar" class="btn btn-lg btn-info" style="width:100%;">
					</div>

				</div>

			</form>



			<div class="container" id="contenedorEspere" style="display:none;height:200px;">
				<div class="row">
					<div class="col-md-8 col-sm-10 col-xs-12 col-md-offset-2 col-sm-offset-1 text-center">
						<h4 class="txt-rojo txt-negrita">Enviando información...</h4>
					</div>
				</div>
			</div>


		</div>


	</div>

</div>


{% endblock %}
