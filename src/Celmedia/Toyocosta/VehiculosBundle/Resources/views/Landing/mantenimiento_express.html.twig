
{% extends 'CelmediaToyocostaVehiculosBundle::layout.html.twig' %}


{% block contenidotoyocosta %}

	{% include 'CelmediaToyocostaVehiculosBundle:Blocks:top.menu.secciones.html.twig' %}

	<div class="row banner-lp visible-md visible-lg visible-sm hidden-xs" style="top:50px;">
		{% image '@CelmediaToyocostaVehiculosBundle/Resources/public/images/landings/mantenimiento_express.png' %}
		<img src="{{ asset_url }}" alt=""  style="width:100%;" class="img-responsive" />
		{% endimage %}
	</div>

	<div class="row banner-lp hidden-md hidden-lg hidden-sm visible-xs">
		{% image '@CelmediaToyocostaVehiculosBundle/Resources/public/images/landings/mantenimiento_express-m.png' %}
		<img src="{{ asset_url }}" alt=""  style="width:100%;" class="img-responsive" />
		{% endimage %}
	</div>


	<div class="container">

		<div class="row lp-contenido">


			<div class="col-md-12 text-center" style="padding-top:20px;padding-bottom:20px;">
				<h1 class="txt-lp-1 txt-rojo">MANTENIMIENTO EXPRESS</h1>
				<p class="txt-lp-p txt-info">Por favor llene el siguiente formulario para que un representante de Toyocosta pueda comunicarse inmediatamente con usted.</p>

			</div>

			<div class="col-md-12" id="contenedorFormMantenimiento">

				<form id="form-mantenimiento" class="form-info contenedor-centrar" enctype="multipart/form-data" >
					
					<input type="hidden"  id="selectedRegalo" name="selectedRegalo"   value="noselected"  />
					<input type="hidden"  id="campana" name="campana"   value="Mantenimiento Express, mailing - "  />
					
					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1 col-xs-12">

								<div class="col-md-4 col-md-offset-1 col-xs-12">
									<label>Nombre:</label>
									<input id="mnombre" name="mnombre" type="text" class="form-control" placeholder="" />
								</div>
								<div class="col-md-4 col-md-offset-1 col-xs-12">
									<label>Apellido:</label>
									<input id="mapellido" name="mapellido" type="text" class="form-control" placeholder="" />
								</div>

						</div>

					</div>

					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1 col-xs-12">

							<div class="row">
								<div class="col-md-4 col-md-offset-1 col-xs-12">
									<label>Tel&eacute;fono:</label>
									<input id="mtelefono" name="mtelefono" type="text" class="form-control" placeholder="" />
								</div>
								<div class="col-md-4 col-md-offset-1 col-xs-12">
									<label>Email:</label>
									<input id="memail" name="memail" type="text" class="form-control" placeholder="" />
								</div>

							</div>	
						</div>

					</div>


					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1 col-xs-12">

							<div class="row">
								<div class="col-md-4 col-md-offset-1 col-xs-12">
									<label>Fecha Tentativa</label>
									<input id="mfecha" name="mfecha" type="date" class="form-control" placeholder="yyyy/mm/dd" />
								</div>

								<div class="col-md-4 col-md-offset-1 col-xs-12">
									<label>Placa:</label>
									<input id="placa" name="placa" type="text" class="form-control" placeholder="" />
								</div>

								<input type="hidden" name="mobservaciones" id="mobservaciones" value="0">
								<input type="hidden" name="mcelular" id="mcelular" value="0">

							</div>	
						</div>

					</div>

					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1 col-xs-12">

							<div class="row">
								<div class="col-md-4 col-md-offset-1 col-xs-12">
									<label>Reserva de:</label>
									<select name="mreserva" id="mreserva" class="form-control txt-select" onchange="reservaSelected(this)">
										<option value="">Selecciona un tipo</option>
										{% for reserva in reservas %}
											<option value="{{ reserva.id }}" >{{ reserva.nombre }}</option>
				                    	{% endfor %}

									</select>
								</div>
								
							</div>	
						</div>

					</div>
					

					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1 col-xs-12">
							<div class="row">
								<div id="talleroculto" class="col-md-4 col-md-offset-1 col-xs-12">
									<div id="dir" style="display:none;">{{  asset('uploads/obsequios/')  }}</div>
									<label>Taller:</label>
									<select name="mtaller" id="mtaller" class="form-control txt-select" onchange="tallerSelected(this)">
									
										<option value="">Selecciona un taller</option>
									</select>
								</div>
								<div class="col-md-4 col-md-offset-1 col-xs-12" id="sm-comentario" style="display:none;">
									<label>Comentario:</label>
									<textarea id="mcomentario" name="mcomentario" class="form-control" rows="3"></textarea>
								</div>

							</div>	
						</div>

					</div>


					<div class="row space-input" id="sm-modelo-km" style="display:none;">
						<div class="col-md-10 col-md-offset-1 col-xs-12">

							<div class="row">
								<div class="col-md-4 col-md-offset-1 col-xs-12">
									<label>Modelo:</label>

									<select name="mmodelo" id="mmodelo" class="form-control txt-select">
										<option value="">Selecciona un modelo</option>
										<option value="Corolla">COROLLA</option>
										<option value="Hilux CD4x2">HILUX CD 4X2</option>
										<option value="Hilux CD4x4">HILUX CD 4x4</option>
										<option value="4Runner">4RUNNER</option>
										<option value="Fj Cruiser">FJ CRUISER</option>
										<option value="Prius C Sport">PRIUS C SPORT</option>
										<option value="Prius Hibrido">PRIUS HIBRIDO</option>
										<option value="Yaris">YARIS</option>
										<option value="Hilux Chasis 4x2">HILUX CHASIS 4X2</option>
										<option value="Hilux CS">HILUX CS</option>
										<option value="Fortunes">FORTUNER</option>
										<option value="Innova 7">INNOVA 7</option>
										<option value="Land Cruiser">LAND CRUISER</option>
										<option value="Highlander">HIGHLANDER</option>
										<option value="Lexus">LEXUS</option>
										<option value="Camry">CAMRY</option>
										<option value="Gt 86">GT-86</option>
										<option value="Hiace">HIACE</option>
										<option value="Sequoia">SEQUOIA</option>
										<option value="Sienna">SIENNA</option>
										<option value="Tacoma">TACOMA</option>
										<option value="Corona">CORONA</option>
										<option value="Cressida">CRESSIDA</option>
										<option value="Crow">CROW</option>
										<option value="Stout">STOUT</option>
										<option value="Tercel">TERCEL</option>
									</select>
								</div>
								<div class="col-md-4 col-md-offset-1 col-xs-12">
									<label>Kilometros:</label>
									<input type="text" name="mkilometraje" id="mkilometraje" class="form-control">
								</div>

							</div>	
						</div>

					</div>


					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1 col-xs-12">
							<div class="col-md-4 col-md-offset-1 col-xs-12">
								<div class="g-recaptcha" data-sitekey="6Ldz2AETAAAAAFVuBytqxNj6NvMtZnbCe1_Q_cgP"></div>
							</div>
						</div>
					</div>
					<div class="row space-input">
						<div class="col-md-10 col-md-offset-1 col-xs-12" style="padding-top:20px;">

							<div class="row">
								<div class="col-md-3 col-md-offset-4">
	                                <input type="submit" value="Enviar" class="btn btn-lg btn-info" style="width:100%;">
								</div>
							</div>	
						</div>

					</div>

				</form>

			</div>


			<div class="container" id="contenedorEspereMantenimiento" style="display:none;height:250px;">
				<div class="row">
					<div class="col-md-8 col-sm-10 col-xs-12 col-md-offset-2 col-sm-offset-1 text-center">
						<h4 class="txt-rojo txt-negrita">Enviando informaci√≥n...</h4>
					</div>
				</div>
			</div>



		</div>

	</div>


{% endblock %}
