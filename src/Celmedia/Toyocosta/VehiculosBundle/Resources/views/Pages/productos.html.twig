{% extends 'CelmediaToyocostaVehiculosBundle::layout.html.twig' %}

	{% block seo %}
    
	    <title>TOYOCOSTA | {% if categoria_vehiculo == 'autos' %} Autos {% elseif categoria_vehiculo == 'camionetas' %} Camionetas {% elseif categoria_vehiculo == 'todoterreno' %} Todoterreno {% else %} Toyota {% endif %}</title>
	    
	    <meta name="description" content="{% if categoria_vehiculo == 'autos' %} Descubre más información sobre los diferentes modelos de autos Toyota, disponibles ahora en Toyocosta. {% elseif categoria_vehiculo == 'camionetas' %} Revisa más sobre los diferentes modelos de camionetas Toyota, disponibles ahora en Toyocosta. {% elseif categoria_vehiculo == 'todoterreno' %} Conoce más detalles sobre los diferentes modelos de todoterreno Toyota, disponibles ahora en Toyocosta. {% else %} Descubre más información sobre los diferentes modelos de Toyota {% endif %}
	    "/>

	    <meta name="keywords" content="{% if categoria_vehiculo == 'autos' %} autos toyota guayaquil, autos toyota modelos, autos toyota cotizar, autos toyota galeria {% elseif categoria_vehiculo == 'camionetas' %} camionetas toyota guayaquil, camionetas toyota modelos, camionetas toyota cotizar, camionetas toyota galeria {% elseif categoria_vehiculo == 'todoterreno' %} todoterreno toyota guayaquil, todoterreno toyota modelos, todoterreno toyota cotizar, todoterreno toyota galeria {% else %} toyota guayaquil, toyota modelos, toyota cotizar, toyota galeria {% endif %}
	    " />

	{% endblock %}

	{% block contenidotoyocosta %}

	
		{% include 'CelmediaToyocostaVehiculosBundle:Blocks:top.menu.secciones.html.twig' %}

		<div class="row {% if categoria_vehiculo == 'autos' %} banner-autos {% elseif categoria_vehiculo == 'camionetas' %} banner-camionetas {% elseif categoria_vehiculo == 'todoterreno' %} banner-suv {% elseif categoria_vehiculo == 'hibridos' %} banner-hibridos {% else %} banner-autos {% endif %}">
			{#<div class="container contenedor-centrar">
				<div class="text-left">
		            <h1 class="title-banner">{{ categoria_vehiculo|upper }} TOYOTA</h1>
		        </div>
			</div>#}
		</div>


		<div class="row">

			<div class="container">
				
				{% for vehiculo in vehiculos %}
				    
				<div class="row">
					<div class="col-md-6">
						<img src="{{ asset('uploads/vehiculo/thumb/' ~ vehiculo.imagenThumb ) }}" alt="" class="img-responsive obj-centrar" />
					</div>
					<div class="col-md-6">
						<h3>{{ vehiculo.nombre }}</h3>
						<div class="accesos2">
							<a href="{{ path('ver_vehiculo', {"categoria": categoria_vehiculo,"vehname": vehiculo.nombre ,  'vehiculoid': vehiculo.id } )  }}#cotizar">Solicita Cotizacion</a>
							<a href="{{ path('test_drive') }}">Test Drive</a>
							<a href="{{ path('ver_vehiculo', {"categoria":categoria_vehiculo, "vehname": vehiculo.nombre , 'vehiculoid': vehiculo.id } )  }}">Ver M&aacute;s</a>
						</div>
					</div>
				</div>
				<hr>
				{% endfor %}
				

			</div>
		</div>

	{% endblock %}