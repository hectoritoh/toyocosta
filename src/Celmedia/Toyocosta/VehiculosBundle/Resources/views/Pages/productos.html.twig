{% extends 'CelmediaToyocostaVehiculosBundle::layout.html.twig' %}

	{% block contenidotoyocosta %}

	
		{% include 'CelmediaToyocostaVehiculosBundle:Blocks:top.menu.secciones.html.twig' %}

		<div class="row {% if categoria_vehiculo == 'autos' %} banner-autos {% elseif categoria_vehiculo == 'camionetas' %} banner-camionetas {% elseif categoria_vehiculo == 'suv' %} banner-suv {% elseif categoria_vehiculo == 'hibridos' %} banner-hibridos {% else %} banner-autos {% endif %}">
			{#<div class="container contenedor-centrar">
				<div class="text-left">
		            <h1 class="title-banner">{{ categoria_vehiculo|upper }} TOYOTA</h1>
		        </div>
			</div>#}
		</div>


		<div class="row">

			<div class="container">
				
				{% for vehiculo in vehiculos %}
				    
				<div class="row">
					<div class="col-md-6">
						<img src="{{ asset('uploads/vehiculo/thumb/' ~ vehiculo.imagenThumb ) }}" alt="" class="img-responsive obj-centrar" />
					</div>
					<div class="col-md-6">
						<h3>{{ vehiculo.nombre }}</h3>
						<div class="accesos2">
							<a href="{{ path('ver_vehiculo', {'vehiculoid': vehiculo.id } )  }}#vehiculo-cotizar">Solicita Cotizacion</a>
							<a href="{{ path('test_drive') }}">Test Drive</a>
							<a href="{{ path('ver_vehiculo', {'vehiculoid': vehiculo.id } )  }}">Ver M&aacute;s</a>
						</div>
					</div>
				</div>
				<hr>
				{% endfor %}
				

			</div>
		</div>

	{% endblock %}