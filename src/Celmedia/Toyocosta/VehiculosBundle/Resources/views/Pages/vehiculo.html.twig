							<li class="active">
								<a href="#paso-1" class="pasos paso-1" data-toggle="tab">&nbsp;</a>
							</li>
							<li class="">
								<a href="#paso-2" class="pasos paso-2" data-toggle="tab">&nbsp;</a>
							</li>
							<li class="">
								<a href="#paso-3" class="pasos paso-3" data-toggle="tab">&nbsp;</a>
							</li>
						</ul>
					</div>
				</div>
			</div>


